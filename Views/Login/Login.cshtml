@model PayEmFinal.Models.Customer

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <style>
        .inner {
            width: 380px;
            height: 380px;
            top: 50%;
            left: 53.5%;
            margin-right: -50%;
            position: absolute;
            transform: translate(-50%,-50%);
        }

        #Header {
            margin-top: 120px;
            margin-left: -10px;
            text-align: center;
        }

        .SignUp {
            margin-right: 110px;
            margin-top: 20px;
            text-align: center;
        }

        .button {
            margin-left: 90px;
        }
    </style>
    <h4 id="Header">Login</h4>

    <div class="outer">
        <div class="inner">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email@*, htmlAttributes: new { @class = "control-label col-md-2" }*@)
                        <br />
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password@*, htmlAttributes: new { @class = "control-label col-md-2" }*@)
                        <br />
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" , @type = "password"} })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="button">
                        @*<div class="col-md-offset-2 col-md-10">*@
                        <button class="btn btn-default"><span class="glyphicon glyphicon-log-in"></span> LogIn </button>
                        @*</div>*@
                        <p>@ViewBag.Message</p>
                    </div>
                </div>
            }
            <div class="SignUp">
                @Html.ActionLink("New User? Register here.", "CustomerRegistration", "Register")
            </div>
        </div>
    </div>
</body>
</html>
